<%- include('../partials/header') %>
<div class="profile-page">
<div class="profile-page--banner"></div>

<div class="profile-page__user">
    
    <img src="<%= user.avatarUrl %>" class=" profile-page__user--avatar" alt="photo">
    <h2><%= user.name %></h2>
</div>
  <div class="profile-page__friends">
    <h3><%= user.name %>'s Friends</h3>
    <ul class="profile-page__friends--list">
      <!-- loop over the array of friends -->
      <% user.friends.forEach((friend) => { %>
        <% users.forEach((friendObj) => { %>
          <% if(friendObj._id === friend) { %>
            <li class="friend"><img src="<%- friendObj.avatarUrl %>" alt="photo">
            <p><%- friendObj.name %></p></li>
          <% } %>
        <% }); %>
      <% }); %>
      <!-- each friend's image and name should be visible. -->
    </ul>
  </div>
  </div>
</div>
<%- include('../partials/footer') %>